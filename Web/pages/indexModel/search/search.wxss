/* pages/indexModel/search/search.wxss */
page{
    background-color: #FFF;
}

.is{
  width: 100%;
}

.is-top{
  width: 92%;
  height: 64rpx;
  padding: 20rpx 4%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #FFF;
}

.is-top-search{
  width: 560rpx;
  height: 60rpx;
  border: 2rpx solid #DDD;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #F4F5F6;
  border-radius: 60rpx;
}

.is-top-search-img{
  width: 44rpx;
  height: 44rpx;
  margin-left: 20rpx;
}

.is-top-search-input{
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #999;
}

.is-top-btn{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #4B89F3;
  margin-left: 30rpx;
}

.is-content{
  width: 100%;
}

.is-history{
  width: 100%;
  background-color: #FFF;
}

.is-history-top{
  width: 92%;
  height: 40rpx;
  padding: 20rpx 4%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.is-history-top-title{
  font-size: 30rpx;
  color: #111;
}

.is-history-top-clear{
  display: flex;
  font-size: 30rpx;
  color: #8C8C8C;
  align-items: center;
}

.is-history-top-clear-img{
  width: 30rpx;
  height: 30rpx;
  margin-right: 14rpx;
}

.is-history-body{
  width: 92%;
  padding: 10rpx 4%;
  max-height: 300rpx;
  overflow-y: auto;
}

.is-history-body-item{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 28rpx;
  color: #838383;
}

.is-history-body-null{
  width: 100%;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: 30rpx;
  color: #838383;
}

.is-guess{
  width: 92%;
  padding: 10rpx 4% 30rpx 4%;
  background-color: #FFF;
}

.is-guess-title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #111;
}

.is-guess-body{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.is-guess-body-item{
  padding: 0 15rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #F4F5F6;
  font-size: 24rpx;
  color: #838383;
  border-radius: 50rpx;
  margin: 10px 20px 10px 0;
}

.is-content-title{
  width: 92%;
  height: 60rpx;
  padding: 10rpx 4%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #FFFFFF;
}

.is-content-title-num{
  font-size: 28rpx;
  color: #838383;
}

.is-content-title-text{
  font-size: 28rpx;
  color: #838383;
  margin-left: 40rpx;
}

.is-content-title-btn{
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #4B89F3;
  margin-left: 30rpx;
}

.is-content-body{
  width: 100%;
}

.is-content-item{
  width: 100%;
  background-color: #FFF;
  margin-bottom: 2rpx;
}

.is-content-item-top{
  width: 92%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
}

.is-content-item-top-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.is-content-item-top-name{
  font-size: 30rpx;
  color: #111;
  margin-right: 20rpx;
}

.is-content-item-top-rank{
  flex: 1;
  font-size: 22rpx;
  color: #838383;
}

.is-content-item-top-looked{
  font-size: 28rpx;
  color: #999;
}

.is-content-item-top-look{
  display: flex;
  font-size: 28rpx;
  color: #4B89F3;
  align-items: center;
}

.is-content-item-top-look-img{
  width: 24rpx;
  height: 24rpx;
  margin-right: 14rpx;
}

.is-content-item-body{
  width: 92%;
  padding: 10rpx 4%;
  background-color: #F8F8F8;
}

.is-content-item-body-title{
  font-size: 30rpx;
  color: #111;
  line-height: 1.5;
  font-weight:bold;
}

.is-content-item-body-text{
  font-size: 28rpx;
  color: #4C4C4C;
  line-height: 1.3;
}

.is-content-item-footer{
  width: 92%;
  padding: 10rpx 4%;
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.is-content-item-footer-time, .is-content-item-footer-agree-read{
  font-size: 22rpx;
  color: #8E8E93;
}

.is-content-item-footer-agree-read text{
  margin-left: 10rpx;
}