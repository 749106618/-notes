/* pages/expertModel/expertDetail/expertDetail.wxss */
.ed{
  width: 100%;
}

.ed-header{
  width: 92%;
  padding: 20rpx 4%;
  background-color: #FFF;
  text-align: center;
}

.ed-header-img-box{
    width: 140rpx;
    height: 140rpx;
    margin: 20rpx auto 40rpx;
    border-radius: 140rpx;   
    position: relative;
}

.ed-header-img{
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
}

.ed-header-suc{
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    bottom: 5rpx;
    right: 15rpx;
    z-index: 1;
}

.ed-header-name{
  font-size: 30rpx;
  color: #111;
  line-height: 40rpx;
}

.ed-header-rank{
  font-size: 22rpx;
  color: #8E8E8E;
  line-height: 40rpx;
}

.ed-header-btn-box{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx auto;
}

.ed-header-btn{
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #4B89F3;
  color: #FFF;
  font-size: 34rpx;
  margin: 40rpx;
  border-radius: 80rpx;
}

.ed-header-content-title{
  font-size: 30rpx;
  color: #111;
  line-height: 50rpx;
  text-align: left;
}

.ed-header-content{
  font-size: 24rpx;
  color: #838383;
  line-height: 1.3;
  text-align: left;
}

.ed-content-title{
  width: 96%;
  height: 80rpx;
  padding-left: 4%;
  text-align: left;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #111;
}

.ed-content{
  width: 100%;
  padding-bottom: 40rpx;
}

.ed-content-item{
  width: 100%;
  background-color: #FFF;
  margin-bottom: 2rpx;
}

.ed-content-item-top{
  width: 92%;
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 auto;
}

.ed-content-item-top-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.ed-content-item-top-name{
  font-size: 30rpx;
  color: #111;
  margin-right: 20rpx;
}

.ed-content-item-top-text{
  font-size: 28rpx;
  color: #838383;
}

.ed-content-item-body{
  width: 92%;
  padding: 10rpx 4%;
}

.ed-content-item-body-title{
  font-size: 30rpx;
  color: #111;
  line-height: 1.5;
  font-weight: bold;
}

.ed-content-item-body-text{
  font-size: 28rpx;
  color: #4C4C4C;
  line-height: 1.3;
}

.ed-content-item-footer{
  width: 92%;
  padding: 10rpx 4%;
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 4rpx #EFEFEF;
}

.ed-content-item-footer-time, .ed-content-item-footer-agree-read{
  font-size: 22rpx;
  color: #8E8E93;
}

.ed-content-item-footer-agree-read text{
  margin-left: 10rpx;
}