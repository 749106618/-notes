/* pages/selfModel/feedBack/feedBack.wxss */
.smfb{
    width: 100%;
}

.smfb-title{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
    color: #999;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.text{
    margin-left: 30rpx;
}

.btn{
    height: 60rpx;
    width: 180rpx;
    display: flex;
    align-items: center;
    border: 1px solid #4B89F3;
    border-radius: 60rpx;
    font-size: 26rpx;
    color: #4B89F3;
    text-align: center;
    padding: 0 10rpx;
    margin-right: 30rpx;
    background-color: #efefef;
}

.btn image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.smfb-input{
    width: 96%;
    height: 120rpx;
    line-height: 120rpx;
    padding-left: 4%;
    background-color: #FFF;
    font-size: 26rpx;
    color: #333;
}

.smfb-textarea{
    width: 92%;
    height: 270rpx;
    padding: 15rpx 4%;
    background-color: #FFF;
    font-size: 26rpx;
    color: #333;
}

.smfb-btn{
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    margin: 60rpx auto;
    font-size: 34rpx;
    color: #FFF;
    background-color: #4B89F3;
    border-radius: 80rpx;
}