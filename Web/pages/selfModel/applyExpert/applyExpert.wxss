/* pages/selfModel/newproveInfo/newproveInfo.wxss */
.npi{
    width: 100%;
}

.smpi-err{
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(0,0,0,0.25);
}

.smpi-err-img{
    width: 36rpx;
    height: 36rpx;
    border-radius: 36rpx;
    margin-left: 30rpx;
}

.smpi-err-text{
    flex: 1;
    font-size: 28rpx;
    color: #FFF;
    margin-left: 20rpx;
}

.smpi-err-btn{
    width: 60rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 42rpx;
    color: #111;
    margin-right: 20rpx;
}

.npi-up-item{
    display: block;
    text-align:center;
}

.npi-item{
    width: 670rpx;
    height: 200rpx;
    background-color: #FFF;
    margin: 40rpx auto 20rpx;
    border-radius: 8rpx;
    text-align: center;
}

.npi-up-item-text{
    font-size: 26rpx;
    color: #4B89F3;
    line-height: 80rpx;
}

.npi-up-item-img{
    width: 40rpx;
    height: 40rpx;
    border-radius: 40rpx;
    margin: 40rpx auto;
}

.npi-up-item-pic{
    width: 670rpx;
    height: 400rpx;
    margin: 40rpx auto 20rpx;
    border-radius: 8rpx;
}

.npi-tips{
    font-size: 24rpx;
    color: #838383;
    margin-left: 34rpx;
}

.npi-tips-im{
    font-size: 24rpx;
    color: #F44A39;
    margin-left: 34rpx;
}

.npi-checkbox{
    display: inline-block;
    width: 25%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #6F7276;
    text-align: center;
    margin: 20rpx 0;
}

checkbox{
    transform: scale(.7);
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   background: #1E7BE2;
}

.npi-btn{
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #4B89F3;
    color: #FFF;
    font-size: 34rpx;
    margin: 60rpx auto;
    border-radius: 80rpx;
}