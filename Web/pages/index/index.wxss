/* pages/index/index.wxss */
.index{
  width: 100%;
  border-bottom: 98rpx;
}

.i-navBar{
  width: 690rpx;
  height: 150rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.i-nav{
  width: 330rpx;
  height: 110rpx;
  background-image: linear-gradient(-90deg, #71B7F9 0%, #4B89F3 100%);
  border-radius: 12rpx;
  font-size: 36rpx;
  color: #FFF;
  display: flex;
  justify-content: center;
  align-items: center;
}

.i-nav:last-child{
  margin-left: 30rpx;
}

.i-nav-img{
  width: 68rpx;
  height: 68rpx;
  margin-right: 20rpx;
}

.i-title{
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 30rpx;
}

.i-title-text{
  font-size: 30rpx;
  color: #111;
  display: flex;
}

.i-title-line{
  width: 8rpx;
  height: 28rpx;
  background-color: #4B89F3;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-top: 16rpx;
}

.i-title-tip{
  font-size: 20rpx;
  color: #F44A39;
  position: absolute;
  top: -10rpx;
  left: 100rpx;
}

.i-scroll{
  width: 100%;
  height: 190rpx;
  display: flex;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.i-scroll-item{
  display: block;
  width: 670rpx;
  height: 145rpx;
  padding-top: 15rpx;
  border-radius: 12rpx;
  background-color: #FFF;
  box-shadow: 0 0 5px 0 rgba(75,137,243,0.20);
  margin: 0 0 0 auto;
}

/* .i-scroll-item:last-child{
  margin-right: 30rpx;
} */

.i-scroll-item-state{
  text-align: center;
  font-size: 30rpx;
}

.i-scroll-item-state-yes{
  color: #4B89F3;
}

.i-scroll-item-state-no{
  color: #F44A39;
}

.i-scroll-item-title{
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #111;
  line-height: 60rpx;
  max-width: 670rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: auto 10rpx;
}

.i-scroll-item-time{
  font-size: 24rpx;
  color: #8E8E93;
  margin-left: 10rpx;
}

.i-content{
    width: 100%;
    padding-bottom: 98rpx;
}

.i-container{
    width: 100%;
    /*padding-bottom: 20rpx;*/
}

.i-content-item{
  width: 100%;
  background-color: #FFF;
  margin-bottom: 2rpx;
}
.i-container :last-child {
    margin-bottom: 0;
}

.i-content-item-top{
  width: 92%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
}

.i-content-item-top-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.i-content-item-top-name{
  font-size: 30rpx;
  color: #111;
  margin-right: 20rpx;
  font-weight: bold;
}

.i-content-item-top-rank{
  flex: 1;
  font-size: 22rpx;
  color: #838383;
}

.i-content-item-top-looked{
  font-size: 28rpx;
  color: #999;
}

.i-content-item-top-look{
  display: flex;
  font-size: 28rpx;
  color: #4B89F3;
  align-items: center;
}

.i-content-item-top-look-img{
  width: 24rpx;
  height: 24rpx;
  margin-right: 14rpx;
}

.i-content-item-body{
  width: 92%;
  padding: 10rpx 4%;
  background-color: #F8F8F8;
}

.i-content-item-body-title{
  font-size: 30rpx;
  color: #111;
  line-height: 1.5;
  font-weight: bold;
}

.i-content-item-body-text{
  font-size: 28rpx;
  color: #4C4C4C;
  line-height: 1.3;
}

.i-content-item-footer{
  width: 92%;
  padding: 10rpx 4%;
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.i-content-item-footer-time, .i-content-item-footer-agree-read{
  font-size: 22rpx;
  color: #8E8E93;
}

.i-content-item-footer-agree-read text{
  margin-left: 10rpx;
}

.ceiling{ 
    width: 100%;
    height: 80rpx;
    background-color: #FFF;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx solid #efefef;
}

.ceiling-tag{
    display: flex;
    justify-content: flex-start;
}

.ceiling-item{
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 36rpx;
    color: #111;
    margin-left: 30rpx;
}

.ceiling-item-active{
    color: #4B89F3!important;
}

.ceiling-load{
    width: 48rpx;
    height: 48rpx;
    margin-right: 30rpx;
}

.loadMore{
    animation:rotating 1.2s linear infinite
}

@keyframes rotating{
    from{transform:rotate(0)}
    to{transform:rotate(360deg)}
}

.ceiling-tip{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #4B89F3;
}

.time-tip-load{
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.time-tip-load-text{
    font-size: 26rpx;
    color: #4B89F3;
}

.time-tip-load-text-img{
    height: 80rpx;
    font-size: 26rpx;
    color: #4B89F3;
    display: flex;
    align-items: center;
    margin-left: 30rpx;
}

.time-tip-load-img{
    width: 32rpx;
    height: 32rpx;
    border-radius: 32rpx;
    margin-left: 10rpx;
}
.modal-dd {
    position: fixed;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    z-index: 1000;
}
.dd-content {
    margin: 0 auto;
    width: 60%;
    min-height: 200rpx;
    background: #ffffff;
    border-radius: 10rpx;
    margin-top: 40%;
    position: relative;
}

.dd-content .d-title {
    text-align: center;
    padding: 16rpx 0;
    border-bottom: 1px solid #e2e2e2;
    font-size: 28rpx;
    color: #333333;
}

.dd-content .d-txt {
    text-align: left;
    padding: 30rpx;
    border-bottom: 1px solid #e2e2e2;
    font-size: 28rpx;
    color: #666666;
}
.d-btn {
    background: none;
    width: 100%;
    color: green;
}