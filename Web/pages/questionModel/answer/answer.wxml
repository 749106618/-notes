<!--pages/questionModel/answer/answer.wxml-->
<view class='answer'>
  <view class='answer-title'>{{questionDetail.questionTitle}}</view>
  <view class='answer-detail'>{{questionDetail.questionDetail}}</view>
  
  <view class='answer-tip'>请填写您的答案</view>

  <form bindsubmit="submit">
    <textarea value='{{reason}}' name='reason' placeholder-class="phcolor" class='answer-content' placeholder='请输入...' maxlength='10000'></textarea>

    <button form-type="submit" class='answer-btn'>提交</button>
  </form>
</view>