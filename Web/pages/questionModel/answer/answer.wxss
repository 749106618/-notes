/* pages/questionModel/answer/answer.wxss */

.answer {
    width: 100%;
}

.answer-title {
    width: 100%;
    padding: 30rpx 30rpx 0 30rpx;
    background-color: #fff;
    font-size: 32rpx;
    color: #111;
    word-break: break-all;
    white-space: pre-wrap;
    box-sizing:border-box;
}

.answer-detail {
    width: 92%;
    line-height: 1.3;
    background-color: #fff;
    font-size: 28rpx;
    color: #4c4c4c;
    padding: 20rpx 4%;
    word-break: break-all;
    white-space: pre-wrap;
}

.answer-tip {
    width: 100%;
    height: 84rpx;
    line-height: 84rpx;
    text-indent: 30rpx;
    font-size: 28rpx;
    color: #4b89f3;
}

.answer-content {
    width: 92%;
    height: 260rpx;
    padding: 20rpx 4%;
    background-color: #fff;
    font-size: 26rpx;
    color: #333;
}

.answer-voice {
    width: 100%;
    margin-top: 30rpx;
    display: flex;
    justify-content: flex-start;
    height: 50rpx;
    align-items: center;
    font-size: 24rpx;
    color: #838383;
    line-height: 50rpx;
}

.answer-voice-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    margin: 0 10rpx 0 30rpx;
}

.answer-btn {
    width: 200rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 80rpx;
    background-color: #4b89f3;
    font-size: 34rpx;
    color: #fff;
    margin: 60rpx auto;
}
