/*************************** loading ******************************/

.loading-box {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex: 0 1 auto;
    align-items: center;
    justify-content: center;
    background-color: #FFF;
}

.loading-box > view:nth-child(0) {
    animation: scale 0.75s 0s infinite cubic-bezier(0.2, 0.68, 0.18, 1.08);
}

.loading-box > view:nth-child(1) {
    animation: scale 0.75s 0.12s infinite cubic-bezier(0.2, 0.68, 0.18, 1.08);
}

.loading-box > view:nth-child(2) {
    animation: scale 0.75s 0.24s infinite cubic-bezier(0.2, 0.68, 0.18, 1.08);
}

.loading-box > view:nth-child(3) {
    animation: scale 0.75s 0.36s infinite cubic-bezier(0.2, 0.68, 0.18, 1.08);
}
.hide {
    display: none;
}
.show {
    display: block;
}

@keyframes scale {
    0% {
        transform: scale(1);
        opacity: 1;
    }

    45% {
        transform: scale(0.1);
        opacity: 0.7;
    }

    80% {
        transform: scale(1);
        opacity: 1;
    }
}

.loading-box > view {
    background-color: #DDD;
    width: 20rpx;
    height: 20rpx;
    border-radius: 100%;
    margin: 4rpx;
    animation-fill-mode: both;
    display: inline-block;
}
