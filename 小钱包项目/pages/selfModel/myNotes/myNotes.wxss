.main{
    background-color: #F2F2F2;
    padding: 0 24rpx;
}
.main_left{
    float: left;
    width:341rpx;
}
.main_right{
    float: right;
    width:341rpx;
}
.main_in{
    padding-top: 23rpx;
    display: inline-block;
}
.main .item{
    width: 100%;
    background-color: #fff;
    border-radius: 20rpx;
    padding-bottom: 25rpx;
    position: relative;
}
.main .item .banner image{
    width: 100%;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}
.main .item .noPass{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: .5;
    z-index: 10;
    border-radius:20rpx;
}
.main .item .noPass .img1{
    width: 201rpx;
    height: 203rpx;
    display: block;
    margin: 0 auto;
    margin-top: 125rpx;
}
.main .item .noPass .img2{
    width: 145rpx;
    height: 54rpx;
    display: block;
    margin: 0 auto;
    margin-top: 22rpx;
}
.main .item .content{
    height: 70rpx;
    width: 300rpx;
    margin: 20rpx;
    color: #222222;
    font-size: 27rpx;
    font-weight: 700;
    overflow : hidden;
    word-break: break-all;
    text-align: justify;
}

.main .item .msg{
    padding-left: 19rpx;
    height: 50rpx;
}
.msg .left{
    float: left;

}
.msg .right{
    float: right;
    margin-right: 17rpx;
}
.main .item .msg .head{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    float: left;
}
.main .item .msg .name{
    margin-left: 15rpx;
    font-size: 20rpx;
    color: #3F3F3F;
    line-height: 50rpx;
    overflow: hidden;
    white-space: nowrap;
    float: left;
}
.main .item .msg .star{
    width: 26rpx;
    height: 24rpx;
    float: left;
    margin-top:13.5rpx
}
.main .item .msg .num{
    font-size: 24rpx;
    color: #888888;
    margin-left: 17rpx;
    line-height: 50rpx;
    float: left;
}
.notMsg{
    margin: 0 auto;
    margin-top: 198rpx;
}

.notMsg image{
    margin-left: 25rpx;
}
.check_pending{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: .5;
    z-index: 10;
    border-radius:20rpx;
}
.check_pending image{
    width: 125rpx;
    height: 122rpx;
    border-top-right-radius: 20rpx;
    position: absolute;
    top: 0;
    right: 0;
}